            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="TextView"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_row="4"
            app:layout_rowWeight="5" />

        <TextView
            android:id="@+id/pitchGridE3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="TextView"
            app:layout_column="2"
