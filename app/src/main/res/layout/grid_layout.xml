<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="637dp"
    android:paddingTop="16dp"
    tools:context=".StatsFragment">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/explanation2"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:text="The Percentage: The success rate of selected stat within a section"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_row="4"
            app:layout_rowWeight="5" />

        <TextView
            android:id="@+id/explanation1"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Colour: Quantity of Stat Occurence in grid location. Blue = Low, Red = High"
            app:layout_column="0"
            app:layout_columnWeight="3"
            app:layout_row="4"
            app:layout_rowWeight="5" />

        <TextView
            android:id="@+id/explanation3"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Grid Locations: From the perspective of the home Keeper at the bottom"
            app:layout_column="2"
            app:layout_columnWeight="3"
            app:layout_row="4"
            app:layout_rowWeight="5" />
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="411dp"
        android:layout_height="461dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">


        <TextView
            android:id="@+id/pitchGridA1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="TextView"
            app:layout_column="0"
            app:layout_columnWeight="3"
            app:layout_row="0"
            app:layout_rowWeight="5" />

        <TextView
            android:id="@+id/pitchGridA2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="TextView"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_row="0"
            app:layout_rowWeight="5" />

        <TextView
            android:id="@+id/pitchGridA3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="TextView"
            app:layout_column="2"
            app:layout_columnWeight="3"
            app:layout_row="0"
            app:layout_rowWeight="5" />

        <TextView
            android:id="@+id/pitchGridB1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="TextView"
            app:layout_column="0"
            app:layout_columnWeight="3"
