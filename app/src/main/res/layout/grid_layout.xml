            app:layout_columnWeight="3"
            app:layout_row="1"
            app:layout_rowWeight="5" />

        <TextView
            android:id="@+id/pitchGridB3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="TextView"
            app:layout_column="2"
            app:layout_columnWeight="3"
            app:layout_row="1"
            app:layout_rowWeight="5" />

        <TextView
            android:id="@+id/pitchGridC1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="TextView"
            app:layout_column="0"
            app:layout_columnWeight="3"
            app:layout_row="2"
            app:layout_rowWeight="5" />

        <TextView
            android:id="@+id/pitchGridC2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="TextView"
            app:layout_column="1"
            app:layout_columnWeight="3"
