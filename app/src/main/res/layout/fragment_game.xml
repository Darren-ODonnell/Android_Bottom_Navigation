<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/gameTimerTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="10:35" />

            <LinearLayout
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/homeTeamTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jud" />

                <TextView
                    android:id="@+id/awayTeamTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NaF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/homeScoreTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1:04" />

                <TextView
                    android:id="@+id/awayScoreTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2:01" />
            </LinearLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button4"
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button"
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="411dp"
            android:layout_height="461dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


            <TextView
                android:id="@+id/pitchGridA1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                app:layout_column="0"
                app:layout_columnWeight="3"
                app:layout_row="0"
                app:layout_rowWeight="5" />

            <TextView
                android:id="@+id/pitchGridA2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                app:layout_column="1"
                app:layout_columnWeight="3"
                app:layout_row="0"
                app:layout_rowWeight="5" />

            <TextView
                android:id="@+id/pitchGridA3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                app:layout_column="2"
                app:layout_columnWeight="3"
                app:layout_row="0"
                app:layout_rowWeight="5" />

            <TextView
                android:id="@+id/pitchGridB1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                app:layout_column="0"
                app:layout_columnWeight="3"
                app:layout_row="1"
                app:layout_rowWeight="5" />

            <TextView
                android:id="@+id/pitchGridB2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                app:layout_column="1"
                app:layout_columnWeight="3"
                app:layout_row="1"
                app:layout_rowWeight="5" />

            <TextView
                android:id="@+id/pitchGridB3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                app:layout_column="2"
                app:layout_columnWeight="3"
                app:layout_row="1"
                app:layout_rowWeight="5" />

            <TextView
                android:id="@+id/pitchGridC1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                app:layout_column="0"
                app:layout_columnWeight="3"
                app:layout_row="2"
                app:layout_rowWeight="5" />

            <TextView
                android:id="@+id/pitchGridC2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                app:layout_column="1"
                app:layout_columnWeight="3"
                app:layout_row="2"
                app:layout_rowWeight="5" />

            <TextView
                android:id="@+id/pitchGridC3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                app:layout_column="2"
                app:layout_columnWeight="3"
                app:layout_row="2"
                app:layout_rowWeight="5" />

            <TextView
                android:id="@+id/pitchGridD1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                app:layout_column="0"
                app:layout_columnWeight="3"
                app:layout_row="3"
                app:layout_rowWeight="5" />

            <TextView
                android:id="@+id/pitchGridD2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                app:layout_column="1"
                app:layout_columnWeight="3"
                app:layout_row="3"
                app:layout_rowWeight="5" />

            <TextView
                android:id="@+id/pitchGridD3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                app:layout_column="2"
                app:layout_columnWeight="3"
                app:layout_row="3"
                app:layout_rowWeight="5" />

            <TextView
                android:id="@+id/pitchGridE1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                app:layout_column="0"
                app:layout_columnWeight="3"
                app:layout_row="4"
                app:layout_rowWeight="5" />

            <TextView
                android:id="@+id/pitchGridE2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                app:layout_column="1"
                app:layout_columnWeight="3"
                app:layout_row="4"
                app:layout_rowWeight="5" />

            <TextView
                android:id="@+id/pitchGridE3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                app:layout_column="2"
                app:layout_columnWeight="3"
                app:layout_row="4"
                app:layout_rowWeight="5" />
        </androidx.gridlayout.widget.GridLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>